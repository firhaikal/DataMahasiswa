<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:orientation="vertical">
    <GridLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:padding="30dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="No"
            android:textSize="16dp"/>
        <EditText
            android:id="@+id/txtNomor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="20"
            android:drawableLeft="@drawable/ic_create_black_24dp"
            android:inputType="number" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Nama"
            android:textSize="16dp"/>
        <EditText
            android:id="@+id/txtNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="20"
            android:drawableLeft="@drawable/ic_group_black_24dp"
            android:inputType="textPersonName" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Tanggal Lahir"
            android:textSize="16dp"/>
        <EditText
            android:id="@+id/txtTanggalLahir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="20"
            android:hint="YYYY-MM-DD"
            android:drawableLeft="@drawable/ic_date_range_black_24dp"
            android:inputType="date" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Jenis Kelamin"
            android:textSize="16dp"/>
        <EditText
            android:hint="L atau P"
            android:id="@+id/txtJenisKelamin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="20"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:inputType="text" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Alamat"
            android:textSize="16dp"/>
        <EditText
            android:id="@+id/txtAlamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="20"
            android:drawableLeft="@drawable/ic_place_black_24dp"
            android:inputType="text" />
    </GridLayout>

    <Button
        android:id="@+id/btnSimpan"
        android:layout_margin="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_below="@id/grid"
        android:background="#00000000"
        android:textColor="#B80000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Simpan"
        android:text="Simpan"
        android:drawableLeft="@drawable/ic_save_black_24dp"
        android:textSize="16sp" />

</androidx.constraintlayout.widget.ConstraintLayout>
