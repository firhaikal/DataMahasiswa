<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <ImageView
            android:id="@+id/imgStudent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/student1"/>

        <Button
            android:textColor="#FFF"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/imgStudent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="15dp"
            android:id="@+id/btnLihat"
            android:padding="10dp"
            android:background="#B22222"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:drawableLeft="@drawable/ic_archive_black_24dp"
            android:text="Lihat Data"/>

        <Button
            android:textColor="#FFF"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/btnLihat"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="15dp"
            android:id="@+id/btnInput"
            android:padding="10dp"
            android:background="#4682B4"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:drawableLeft="@drawable/ic_add_box_black_24dp"
            android:text="INPUT DATA"/>

        <Button
            android:textColor="#FFF"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/btnInput"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="15dp"
            android:id="@+id/btnInfo"
            android:padding="10dp"
            android:background="#B8860B"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:drawableLeft="@drawable/ic_info_black_24dp"
            android:text="INFORMASI"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
