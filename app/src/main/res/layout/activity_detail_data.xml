<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailDataActivity">
    <GridLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:padding="30dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/student1"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="No"
            android:textSize="16dp"/>
        <EditText
            android:id="@+id/dtlNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="20"
            android:drawableLeft="@drawable/ic_create_black_24dp"
            android:inputType="number" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Nama"
            android:textSize="16dp"/>
        <EditText
            android:id="@+id/dtlNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="20"
            android:drawableLeft="@drawable/ic_group_black_24dp"
            android:inputType="textPersonName" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Tanggal Lahir"
            android:textSize="16dp"/>
        <EditText
            android:id="@+id/dtlTtl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="20"
            android:drawableLeft="@drawable/ic_date_range_black_24dp"
            android:inputType="date" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Jenis Kelamin"
            android:textSize="16dp"/>
        <EditText
            android:id="@+id/dtlJk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="20"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:inputType="text" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Alamat"
            android:textSize="16dp"/>
        <EditText
            android:id="@+id/dtlAlamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="20"
            android:drawableLeft="@drawable/ic_place_black_24dp"
            android:inputType="text" />
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>